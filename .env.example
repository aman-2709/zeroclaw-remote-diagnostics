# ZeroClaw Remote Diagnostics — Environment Variables

# ─── Database ───
DATABASE_URL=postgres://zcadmin:changeme@localhost:5432/zeroclaw
DATABASE_MAX_CONNECTIONS=10

# ─── Cloud API ───
API_HOST=0.0.0.0
API_PORT=3000
JWT_SECRET=changeme-generate-with-openssl-rand-base64-32
JWT_ISSUER=zeroclaw-remote-diagnostics

# ─── AWS ───
AWS_REGION=us-east-1
AWS_IOT_ENDPOINT=xxxxxxxxxxxxxx-ats.iot.us-east-1.amazonaws.com

# ─── MQTT (Edge Agent) ───
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=8883
MQTT_CLIENT_CERT=/etc/zeroclaw/certs/device.pem
MQTT_CLIENT_KEY=/etc/zeroclaw/certs/device.key
MQTT_CA_CERT=/etc/zeroclaw/certs/AmazonRootCA1.pem

# ─── Edge Agent ───
FLEET_ID=default
DEVICE_ID=rpi-001
CAN_INTERFACE=can0
OLLAMA_URL=http://localhost:11434

# ─── Bedrock (Cloud Fallback) ───
BEDROCK_MODEL_DEFAULT=amazon.nova-lite-v1:0
BEDROCK_MODEL_ESCALATION=anthropic.claude-3-haiku-20240307-v1:0
